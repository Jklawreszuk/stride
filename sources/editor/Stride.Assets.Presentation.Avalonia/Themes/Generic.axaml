                  <Image Source="{StaticResource ImageResetCamera}" RenderOptions.BitmapInterpolationMode="LowQuality" Width="16" Height="16"/>
                </Button>
              </StackPanel>
            </Border>
            <ContentPresenter x:Name="PART_StrideView"/>
          </DockPanel>
