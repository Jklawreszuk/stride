  <ControlTheme x:Key="{x:Type views:SoundPreviewView}" TargetType="{x:Type views:SoundPreviewView}" >
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type views:SoundPreviewView}">
          <DockPanel Background="{StaticResource NormalBrush}">
	<Design.DataContext>
		<viewModel:SoundPreviewViewModel />
	</Design.DataContext>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" IsVisible="{Binding IsAudioValid}">
              <Button Command="{Binding PlayCommand}" Background="Transparent" ToolTip.Tip="{sd:Localize Play the sound, Context=ToolTip}">
                <Image Source="{StaticResource ImagePlay}" RenderOptions.BitmapInterpolationMode="LowQuality" Width="16" Height="16"/>
              </Button>
              <Button Command="{Binding PauseCommand}" Background="Transparent" ToolTip.Tip="{sd:Localize Pause the sound, Context=ToolTip}">
                <Image Source="{StaticResource ImagePause}" RenderOptions.BitmapInterpolationMode="LowQuality" Width="16" Height="16"/>
              </Button>
              <Slider Height="8" Margin="5" Minimum="0" Maximum="1" Value="{Binding MasterVolume}" Width="60" />
<!--               <Slider Height="8" Margin="5" Minimum="0" Maximum="1" Value="{Binding MasterVolume}" Width="60" IsMoveToPointEnabled="True"/> -->
            </StackPanel>
            <Border VerticalAlignment="Center">
              <StackPanel>
                <Slider Height="20" Margin="15,5" Minimum="0" Maximum="{Binding Duration.TotalSeconds, Mode=OneWay}" Value="{Binding CurrentValue}" IsVisible="{Binding IsAudioValid}">
<!--                <Slider Height="20" Margin="15,5" Minimum="0" Maximum="{Binding Duration.TotalSeconds, Mode=OneWay}" Value="{Binding CurrentValue}" IsMoveToPointEnabled="True" IsVisible="{Binding IsAudioValid}">-->
                  <Slider.Template>
                    <ControlTemplate TargetType="{x:Type Slider}">
                      <Grid x:Name="GridRoot" Focusable="False" MinHeight="{TemplateBinding MinHeight}">
                        <Border Margin="0" x:Name="Border" Height="4" CornerRadius="2" Background="{DynamicResource DropdownButtonBackgroundBrush}" BorderBrush="{DynamicResource NormalBorderBrush}" BorderThickness="1,1,1,1" />
                        <Track x:Name="PART_Track" Value="{TemplateBinding Value, Mode=TwoWay}">
                          <Track.Thumb>
                            <Thumb Theme="{DynamicResource NuclearSliderThumb}" Foreground="{x:Null}" Width="12" Height="{TemplateBinding Height}"/>
                          </Track.Thumb>
                          <Track.IncreaseButton>
                            <RepeatButton Theme="{DynamicResource NuclearScrollRepeatButtonStyle}"  />
                          </Track.IncreaseButton>
                          <Track.DecreaseButton>
                            <RepeatButton Theme="{DynamicResource NuclearScrollRepeatButtonStyle}"  />
                          </Track.DecreaseButton>
                        </Track>
                      </Grid>
                      <!-- <ControlTemplate.Triggers>
                        
                      </ControlTemplate.Triggers> -->
                    <!----></ControlTemplate>
                  </Slider.Template>
                </Slider>
                <TextBlock HorizontalAlignment="Center" IsVisible="{Binding IsAudioValid}">
                  <Run Text="{Binding CurrentTime, StringFormat={}{0:mm\\:ss\\:fff}, Mode=OneWay}"/>/<Run Text="{Binding Duration, StringFormat={}{0:mm\\:ss\\:fff}, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock Text="{sd:Localize Building preview sound asset...}" HorizontalAlignment="Center" IsVisible="{Binding IsAudioValid, Converter={sd:InvertBool}}"/>
              </StackPanel>
            </Border>
          </DockPanel>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  	<Style Selector="^:disabled">

                          		<Style Selector="^ /template/ Border#Border">
			<Setter Property="Background" Value="{DynamicResource DisabledBackgroundBrush}"/>
		</Style>

                          		<Style Selector="^ /template/ Border#Border">
			<Setter Property="BorderBrush" Value="{DynamicResource DisabledBorderBrush}"/>
		</Style>

                        	</Style>
</ControlTheme>

  <ControlTheme x:Key="{x:Type views:SpriteSheetPreviewView}" TargetType="{x:Type views:SpriteSheetPreviewView}" >
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type views:SpriteSheetPreviewView}">
          <DockPanel>
	<Design.DataContext>
		<viewModel:SpriteSheetPreviewViewModel />
	</Design.DataContext>
            <DockPanel DockPanel.Dock="Top" Background="{StaticResource NormalBrush}">
              <TextBlock DockPanel.Dock="Right" Margin="5" VerticalAlignment="Center" Text="{Binding SpriteScale, StringFormat={}{0:P}}"/>
              <StackPanel Orientation="Horizontal" Margin="4">
                <Button Command="{Binding PreviewZoomOutCommand}" Background="Transparent" Margin="2">
                  <Image Source="{StaticResource ImageZoomOut}" RenderOptions.BitmapInterpolationMode="LowQuality" Width="16" Height="16" />
                </Button>
                <Button Command="{Binding PreviewZoomInCommand}" Background="Transparent" Margin="2">
                  <Image Source="{StaticResource ImageZoomIn}" RenderOptions.BitmapInterpolationMode="LowQuality" Width="16" Height="16" />
                </Button>
                <Button Command="{Binding PreviewScaleToRealSizeCommand}" Background="Transparent" Margin="2">
                  <Image Source="{StaticResource ImageScaleOnRealSize}" RenderOptions.BitmapInterpolationMode="LowQuality" Width="16" Height="16" />
                </Button>
                <Button Command="{Binding PreviewFitOnScreenCommand}" Background="Transparent" Margin="2">
                  <Image Source="{StaticResource ImageFitOnScreen}" RenderOptions.BitmapInterpolationMode="LowQuality" Width="16" Height="16" />
                </Button>
                <Border Width="1" Margin="6,2,6,2" Background="{StaticResource NormalBorderBrush}"/>
<!--                <ComboBox Width="120" ItemsSource="{Binding Source={x:Type preview:SpriteSheetDisplayMode}, Converter={sd:EnumValues}}" SelectedItem="{Binding DisplayMode}">
                  <ComboBox.ItemTemplate>
                    <DataTemplate>
                      <TextBlock Text="{Binding Converter={sd:EnumToDisplayName}}"/>
                    </DataTemplate>
                  </ComboBox.ItemTemplate>
                </ComboBox>-->
                <Border Width="1" Margin="6,2,6,2" Background="{StaticResource NormalBorderBrush}"/>
                <Button Command="{Binding PreviewPreviousFrameCommand}" Background="Transparent" ToolTip.Tip="{sd:Localize Previous sprite, Context=ToolTip}" Content="&lt;" Padding="4,0"/>
                <TextBlock VerticalAlignment="Center" Margin="4">
                  <Run Text="{sd:Localize Sprite:}"/>
                  <Run Text="{Binding PreviewCurrentFrame, Mode=OneWay}"/>/<Run Text="{Binding PreviewFrameCount, Mode=OneWay}"/>
                </TextBlock>
                <Button Command="{Binding PreviewNextFrameCommand}" Background="Transparent" ToolTip.Tip="{sd:Localize Next sprite,  Context=ToolTip}" Content="&gt;" Padding="4,0"/>
              </StackPanel>
            </DockPanel>
            <Border DockPanel.Dock="Bottom">
              <Slider Height="16" Margin="5" Minimum="1" Maximum="{Binding PreviewFrameCount, Mode=OneWay}" TickFrequency="1" TickPlacement="BottomRight" Value="{Binding PreviewCurrentFrame}" >
<!--              <Slider Height="16" Margin="5" Minimum="1" Maximum="{Binding PreviewFrameCount, Mode=OneWay}" TickFrequency="1" TickPlacement="BottomRight" Value="{Binding PreviewCurrentFrame}" IsMoveToPointEnabled="True">-->
                <i:Interaction.Behaviors>
                  <sd:SliderDragFromTrackBehavior/>
                </i:Interaction.Behaviors>
              </Slider>
            </Border>
            <ContentPresenter x:Name="PART_StrideView"/>
          </DockPanel>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </ControlTheme>

