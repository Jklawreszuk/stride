<Project>

  <PropertyGroup>
    <StrideRuntime>true</StrideRuntime>
  </PropertyGroup>

  <Import Project="..\..\targets\Stride.props" />

  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <StrideAssemblyProcessor>true</StrideAssemblyProcessor>
    <StrideAssemblyProcessorOptions>--serialization</StrideAssemblyProcessorOptions>
    <StrideBuildTags>*</StrideBuildTags>
    <StrideCodeAnalysis>true</StrideCodeAnalysis>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Stride.Physics\Stride.Physics.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\shared\SharedAssemblyInfo.cs">
      <Link>Properties\SharedAssemblyInfo.cs</Link>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="DotRecast.Detour" />
    <PackageReference Include="DotRecast.Recast" />
  </ItemGroup>

  <Import Project="$(StrideSdkTargets)" />

</Project>